@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col">
        <div class="float-left mt-4">
            <img src="~/Images/register.jpg" height="430" width="600" />
        </div>
        <div class="float-right">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-primary font-weight-bold" style="font-family:'Lucida Calligraphy'">Create a new account...</h2>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" id="myInput" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success w-25">SignUp</button>
                    <p class="mt-2">
                        If you already have an account..
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary" style="font-family:'Lucida Calligraphy'">
                            You can Sign In !!!
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
