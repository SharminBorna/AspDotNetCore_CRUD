@model work_01.Models.Visitor

@{
    ViewData["Title"] = "Delete";
}

<h3 class="alert alert-danger mt-2">Are you sure you want to delete @Model.VisitorName?</h3>
<div class="row">
    <div class="col">
        <dl class="row border">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.VisitorName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.VisitorName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.City.cName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.VisitDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.VisitDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-8"> 
                @Html.DisplayFor(model => model.Image)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Delete</button>
            <a asp-action="Index" asp-controller="Visitors" class="btn btn-info btn-sm"><i class="fa fa-backward"></i> Back to List</a>
        </form>
    </div>
</div>
